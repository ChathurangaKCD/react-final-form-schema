{
  "definitions": {
    "daterange": {
      "type": "array",
      "items": [
        { "$ref": "#/definitions/date" },
        { "$ref": "#/definitions/date" }
      ],
      "ui:field": "daterange",
      "minItems": 2,
      "maxItems": 2
    },
    "datetimerange": {
      "type": "array",
      "items": [
        { "$ref": "#/definitions/datetime" },
        {
          "$ref": "#/definitions/datetime",
          "formatMinimum": {
            "$data": "1/0"
          }
        }
      ],
      "ui:field": "datetimerange",
      "minItems": 2,
      "maxItems": 2
    },
    "date": { "type": "string", "format": "date", "ui:field": "date" },
    "datetime": {
      "type": "string",
      "format": "date-time",
      "ui:field": "datetime"
    },
    "ipv4": {
      "type": "string",
      "format": "ipv4",
      "ui:field": "ipv4"
    }
  },
  "title": "A list of tasks",
  "type": "object",
  "required": ["title", "desc"],
  "properties": {
    "title": {
      "type": "string",
      "title": "Task list title",
      "minLength": 4,
      "maxLength": 10
    },
    "desc": {
      "type": "string",
      "title": "Description",
      "maxLength": 20
    },
    "ipaddress": {
      "$ref": "#/definitions/ipv4",
      "title": "IP Address"
    },
    "complete": {
      "type": "boolean",
      "title": "Complete?",
      "default": false
    },
    "additional": {
      "title": "Additional",
      "type": "object",
      "properties": {
        "subtasks": {
          "type": "array",
          "title": "Sub Tasks",
          "items": {
            "type": "string",
            "minLength": 5
          }
        },
        "date": {
          "$ref": "#/definitions/date",
          "title": "Date"
        },
        "datetime": {
          "$ref": "#/definitions/datetime",
          "title": "DateTime"
        },
        "daterange": {
          "$ref": "#/definitions/daterange",
          "title": "Date range"
        },
        "datetimerange": {
          "$ref": "#/definitions/datetimerange",
          "title": "Datetime range"
        },
        "priority": {
          "type": "number",
          "title": "Priority",
          "multipleOf": 0.01,
          "maximum": 10,
          "minimum": 3
        },
        "priorityInt": {
          "type": "integer",
          "title": "PriorityInt",
          "multipleOf": 2,
          "maximum": 10,
          "minimum": { "$data": "1/priority" }
        },
        "priorityRange": {
          "type": "integer",
          "title": "PriorityIntRange",
          "multipleOf": 2,
          "maximum": 10,
          "minimum": 0
        }
      },
      "required": ["priority", "datetimerange"]
    },
    "category": {
      "title": "Category",
      "type": "string",
      "enum": ["a0", "b0", "b10", "b100", "c1", "c2"],
      "enumNames": ["A0", "B0", "B10", "B100", "B1", "C2"]
    },
    "rel_categories": {
      "title": "Other Categories",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["a0", "b0", "b10", "b100", "c1", "c2"],
        "enumNames": ["A0", "B0", "B10", "B100", "B1", "C2"]
      }
    },
    "tasks": {
      "type": "array",
      "title": "Tasks",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": {
            "type": "string",
            "title": "Title",
            "description": "A sample title"
          },
          "details": {
            "type": "string",
            "title": "Task details",
            "description": "Enter the task details",
            "default": "Detailts default"
          },
          "done": {
            "type": "boolean",
            "title": "Done?",
            "default": false
          }
        }
      }
    }
  }
}
