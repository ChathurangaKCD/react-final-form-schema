{
  "title": "A list of tasks",
  "type": "object",
  "required": ["title"],
  "properties": {
    "title": {
      "type": "string",
      "title": "Task list title",
      "minLength": 10
    },
    "desc": {
      "type": "string",
      "title": "Description",
      "ui": {
        "widget": "textarea"
      }
    },
    "additional": {
      "title": "Additional",
      "type": "object",
      "properties": {
        "subtasks": {
          "type": "array",
          "title": "Sub Tasks",
          "items": { "type": "string", "fieldProps": { "required": true } }
        },
        "date": {
          "type": "date",
          "title": "Date"
        },
        "datetime": {
          "type": "datetime",
          "title": "DateTime"
        },
        "daterange": {
          "type": "datetimerange",
          "title": "Date range",
          "fieldProps": {}
        },
        "priority": {
          "type": "number",
          "title": "Priority",
          "fieldProps": {
            "step": 0.01
          }
        }
      }
    },
    "category": {
      "title": "Category",
      "type": "enum",
      "items": [
        { "value": "a", "label": "A" },
        { "value": "b1", "label": "B1" },
        { "value": "b2", "label": "B2" },
        { "value": "b3", "label": "B3" },
        { "value": "b4", "label": "B4" },
        { "value": "c1", "label": "C1" },
        { "value": "c2", "label": "C2" },
        { "value": "c3", "label": "C3" },
        { "value": "c4", "label": "C4" }
      ],
      "fieldProps": {
        "required": true,
        "multiple": true
      }
    },
    "tasks": {
      "type": "array",
      "title": "Tasks",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": {
            "type": "string",
            "title": "Title",
            "description": "A sample title",
            "fieldProps": {
              "required": true
            }
          },
          "details": {
            "type": "string",
            "title": "Task details",
            "description": "Enter the task details"
          },
          "done": {
            "type": "boolean",
            "title": "Done?",
            "default": false
          }
        }
      }
    }
  }
}
